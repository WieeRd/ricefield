# vim: filetype=gitconfig

[include]
	path = delta
	path = lfs
	path = maintenance

[user]
	name = WieeRd
	email = verywieerd@gmail.com

[core]
	editor = nvim

[init]
	defaultBranch = master

[commit]
	gpgSign = true

[diff]
	colorMoved = default
	algorithm = histogram
	submodule = log

[pull]
	rebase = false

[push]
	default = current
	autoSetupRemote = true

[merge]
	autoStash = true
    conflictStyle = zdiff3

[rebase]
	autoStash = true

[rerere]
	enabled = true

[help]
	autoCorrect = prompt

[alias]
    s = status
    d = diff
	a = add
    c = commit

    b = branch
	sw = switch
	sc = switch --create
	sd = switch --detach

    m = merge
	ms = merge --squash
    r = rebase
	ri = rebase --interactive

    f = fetch
    pl = pull
	plr = pull --rebase
    ps = push
	psf = push --force-with-lease

	shallow = clone --depth 1
	partial = clone --filter=blob:none
	dwarf = clone --filter=tree:0  # what are you, a bloody leaf lover?

	l = log
    lg = log --oneline --graph  # FEAT: show author and relative date
    ls = ls-tree -r --name-only HEAD
	who = blame -w -C -C -C
