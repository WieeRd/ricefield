# vim: filetype=gitconfig

[include]
	path = delta

[user]
	name = WieeRd
	email = verywieerd@gmail.com

[core]
	editor = nvim


[init]
	defaultBranch = master

[commit]
	gpgSign = true

[diff]
	colorMoved = default
	algorithm = histogram

[pull]
	rebase = true

[push]
	default = current

[merge]
    conflictStyle = zdiff3

[rebase]
	autoStash = true

[help]
	autoCorrect = prompt


[alias]
    s = status
    d = diff
    c = commit

    b = branch
    co = checkout

    m = merge
    r = rebase

    f = fetch
    ps = push
    pl = pull

    lg = log --oneline --graph
    ls = ls-tree -r --name-only HEAD


[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
