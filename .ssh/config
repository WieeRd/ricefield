# get .gitignore'd, no way I'm doxxing my own servers
Include hosts

Host *
    # show host fingerprint ASCII art on login
    VisualHostKey yes 

    # share connection between sessions and persist it for 15 minutes
    ControlMaster auto
    ControlPath ${XDG_RUNTIME_DIR}/ssh-%r@%h:%p.sock
    ControlPersist 15m
